# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"
export GPG_TTY=$(tty)

# Make vim the default editor
export EDITOR="nvim"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE

# Don't put duplicate lines in the history. 
export HISTCONTROL=ignoredups:ignorespace

# timestamps for bash history. www.debian-administration.org/users/rossen/weblog/1
# saved for later analysis
export HISTTIMEFORMAT='%F %T '

# Make some commands not show up in history
# export HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help"

# Load ripgrep
export RIPGREP_CONFIG_PATH="$HOME/.dotfiles/.ripgreprc"

# FZF
export FZF_DEFAULT_OPTS=$FZF_DEFAULT_OPTS' --color=fg:#ffffff,bg:#1c1c1c,hl:#ff5ea0 --color=fg+:#ffffff,bg+:#262626,hl+:#ff5ea0 --color=info:#87ff00,prompt:#87ff00,pointer:#ff5ea0 --color=marker:#f1ff5e,spinner:#5ef1ff,header:#87ff00'

# PATH
export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:~/.python/venv/bin/:/usr/local/bin:~/.local/bin/:/home/linuxbrew/.linuxbrew/sbin:/home/linuxbrew/.linuxbrew/bin:~/.config/composer/vendor/bin/:~/.dotfiles/bin:~/.composer/vendor/bin:~/.node_modules/bin:~/Code/bin/:./vendor/bin:./node_modules/.bin:./.bin:./bin:$PATH"

export JAVA_HOME=/opt/android-studio/jbr
export ANDROID_HOME="$HOME/Android/Sdk"
# export NDK_HOME="$ANDROID_HOME/ndk/$(ls -1 $ANDROID_HOME/ndk)"
